{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "off",
        "consistent-return":"off",
        "no-tabs": "off",
        "indent": ["error", 4],
        "semi": "error",
        "space-infix-ops": "error",
        "space-unary-ops": "error",
        "no-var": "error"
    }
}
